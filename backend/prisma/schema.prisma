generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Images {
  id           String   @id @unique @default(uuid())
  title        String
  link         String   @unique
  size         Float
  width        Float
  height       Float
  deviceName   String
  tags         Tags[]
  uploadedData DateTime @default(now())
}

model Tags {
  id      String @id @unique @default(uuid())
  title   String @unique
  imageId String
  image   Images @relation(fields: [imageId], references: [id])
}

model Owner {
  id           String   @id @unique @default(uuid())
  name         String
  password     String
  email        String   @unique
  creationDate DateTime @default(now())
}
